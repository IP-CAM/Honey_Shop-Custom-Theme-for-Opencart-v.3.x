{{ header }}{% set newproductdays = 30 %}<div id="product-category" class="container"><ul class="breadcrumb">{% for breadcrumb in breadcrumbs %}<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>{% endfor %}</ul><div class="row"><div class="col-sm-12"><div class="product_tab-title"><h1 class="text-left">{{ heading_title }}</h1></div></div></div><div class="row">{{ column_left }}{% if column_left and column_right %}{% set class = 'col-sm-6' %}{% elseif column_left or column_right %}{% set class = 'col-sm-9' %}{% else %}{% set class = 'col-sm-12' %}{% endif %}<div id="content" class="{{ class }} category">{{ content_top }}{% if products %}<div class="row"><div class="col-md-2 col-sm-6 hidden-xs"><div class="btn-group btn-group-sm hidden"><button type="button" id="list-view" class="btn btn-default" data-toggle="tooltip" title="{{ button_list }}"><i class="fa fa-th-list"></i></button><button type="button" id="grid-view" class="btn btn-default" data-toggle="tooltip" title="{{ button_grid }}"><i class="fa fa-th"></i></button></div></div><div class="col-md-3 col-sm-6"></div><div class="col-md-4 col-xs-6 hidden-xs"><div class="form-group input-group input-group-sm hidden-xs"><label class="input-group-addon" for="input-sort">{{ text_sort }}</label><select id="input-sort" class="form-control" onchange="location = this.value;">{% for sorts in sorts %}{% if sorts.value == '%s-%s'|format(sort, order) %}<option value="{{ sorts.href }}" selected="selected">{{ sorts.text }}</option>{% else %}<option value="{{ sorts.href }}">{{ sorts.text }}</option>{% endif %}{% endfor %}</select></div></div><div class="col-md-3 col-xs-6 hidden-xs"><div class="form-group input-group input-group-sm hidden-xs"><label class="input-group-addon" for="input-limit">{{ text_limit }}</label><select id="input-limit" class="form-control hidden-xs" onchange="location = this.value;">{% for limits in limits %}{% if limits.value == limit %}<option value="{{ limits.href }}" selected="selected">{{ limits.text }}</option>{% else %}<option value="{{ limits.href }}">{{ limits.text }}</option>{% endif %}{% endfor %}</select></div></div></div><div class="row">{% set time=0 %}{% for product in products %}<div class="product-layout product-list col-xs-12"><div class="product-thumb wow fadeInLeft" data-wow-duration="0.3s" data-wow-delay="{{ time*0.35 }}s"><div class="image"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-responsive"/><span class="badge-wrapper">{% if product.special %}<span class="badge sale">SALE!</span>{% endif %}{% if  product.special and days < newproductdays%}<span class="badge new offset">NEW</span>{% elseif days < newproductdays %}<span class="badge new">NEW</span>{% endif %}</span></div><div class="caption"><div class="product_tab-title"><h3>{{ product.name }}</h3></div><div>{% if product.weight %}Вес: <span><span class="count"><strong>{{ product.weight }}</strong></span> {{ product.type }}</span>{% endif %}</div>{% if product.price %}<p class="price">{% if not product.special %}<span>{{ product.price }}</span>{% else %}<span class="price-old">{{ product.price }}</span><span class="price-new">{{ product.special }}</span>{% endif %}</p>{% endif %}</div><div class="overlay"><a href="{{ product.href }}" class="button readmore">Подробнее</a><br/><button type="button"  class="button-add-cart button" onclick="cart.add('{{ product.product_id }}', '{{ product.minimum }}');">В корзину</button></div></div></div>{% set time=time+1 %}{% endfor %} </div><div class="row"><div class="col-md-6 col-md-offset-6 col-sm-6 col-sm-offset-6 col-xs-12 text-right result ">{{ results }}</div></div><div class="row"><div class="col-md-6 col-md-offset-6 col-sm-6 col-sm-offset-6 col-xs-12 text-right page">{{ pagination }}</div></div>{% endif %}{% if not categories and not products %}<p class="no-result">{{ text_empty }}</p><div class="buttons"><div class="pull-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div></div>{% endif %}{{ content_bottom }}</div>{{ column_right }}</div></div>{{ footer }}