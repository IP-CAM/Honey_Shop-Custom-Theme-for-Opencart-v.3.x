<h3>{{ heading_title }}</h3><div class="row">{% set time=0 %}{% for product in products %}<div class="product-layout product-list col-xs-12"><div class="product-thumb wow fadeInLeft" data-wow-delay="{{ time*0.2 }}s" data-wow-offset="-150" ><div class="image"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-responsive" /><span class="badge-wrapper">{% if product.special %}<span class="badge sale">SALE!</span>{% endif %}{% if  product.special and days < newproductdays%}<span class="badge new offset">NEW</span>{% elseif days < newproductdays %}<span class="badge new">NEW</span>{% endif %}</span></div><div class="caption"><div class="product_tab-title"><h3>{{ product.name }}</h3></div><div>{% if product.weight %}Вес: <span><span class="count"><strong>{{ product.weight }}</strong></span> {{ product.type }}</span>{% endif %}</div>{% if product.price %}<p class="price">{% if not product.special %}<span>{{ product.price }}</span>{% else %}<span class="price-old">{{ product.price }}</span><span class="price-new">{{ product.special }}</span>{% endif %}</p>{% endif %}</div><div class="overlay"><a href="{{ product.href }}" class="button readmore">Подробнее</a><br/><button type="button"  class="button-add-cart button" onclick="cart.add('{{ product.product_id }}', '{{ product.minimum }}');">В корзину</button></div></div></div>{% set time=time+1 %}{% endfor %}</div>