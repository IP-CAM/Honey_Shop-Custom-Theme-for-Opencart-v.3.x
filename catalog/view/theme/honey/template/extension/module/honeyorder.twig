{% if orders %}<div class="container"><div class="product_tab-title wow fadeInDown" data-wow-offset="-50" data-wow-duration="0.5s"><h2>Как сделать заказ</h2></div><div id="order"><div class="row">{% set time=0 %}{% for order in orders %}{% if time%2==0 %}<div class="col-md-3 col-xs-6 up"><div class="order-round wow fadeInUp" data-wow-delay="{{ time*0.35 }}s"><img src="{{ order.icon }}" alt="{{ order.title }}"></div><h3 class="wow fadeInUp" data-wow-delay="{{ time*0.4 }}s">{{ order.title }}</h3></div>{% else %}<div class="col-md-3 col-xs-6 down"><div class="order-round wow fadeInUp" data-wow-delay="{{ time*0.35 }}s" data-wow-duration="1s"><img src="{{ order.icon }}" alt="{{ order.title }}"></div><h3 class="wow fadeInUp" data-wow-delay="{{ time*0.4 }}s" data-wow-offset="-350">{{ order.title }}</h3></div>{% endif %}{% set time=time+1 %}{% endfor %}</div></div></div>{% endif %}